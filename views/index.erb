<form action='login' method='post'>
  <label>Name: </label>
  <input type='text' name='name' />

  <br />

  <label>Password: </label>
  <input type='text' name='password' />

  <br />
  <input type='submit' />
</form>

<div>
  <h3>Last Added User</h3>
  <% @users.each do |user| %>
    <p>
      Name: <%= user.name %><br />      
      Email: <%= user.email %><br />      
      Password: <%= user.pass %>
    </p>
  <% end %>
</div>